<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
		<TextView 
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:id="@+id/records_title_date"
		        android:text="2015.06.02"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
		    
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal" >

	            <ImageView 
	                android:layout_width="wrap_content"
	            	android:layout_height="wrap_content"
	            	android:src="@drawable/ic_drawer"
	            	android:id="@+id/content_type_image"/>
	            <TextView 
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="加油充值卡"
	                android:id="@+id/content_type_label"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:orientation="horizontal" >

	            <ImageView 
	                android:layout_width="wrap_content"
	            	android:layout_height="wrap_content"
	            	android:src="@drawable/ic_drawer"
	            	android:id="@+id/ji_fen_image"/>

	            <TextView
	                android:id="@+id/records_label"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_gravity="right"
	                android:gravity="right"
	                android:text="25507.21" />

	        </LinearLayout>
        </LinearLayout>    
    </LinearLayout>

    <TextView
        android:id="@+id/content_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="您今天于12:28分中石化加油站消费积分，价值889元" />
	
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
	    <TextView
	        android:id="@+id/content_note_title"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="特别提醒： " />
	    <TextView
	        android:id="@+id/content_note_label"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text=""/>
	</LinearLayout>
</LinearLayout>
